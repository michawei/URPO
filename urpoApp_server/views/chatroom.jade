doctype html
html
  head
    title Chatroom
    | &#x9;&#x9;
    link(rel='stylesheet', type='text/css', href='stylesheets/main.css')
    | &#x9;&#x9;
    script(type='text/javascript', src='js/jquery-2.1.4.min.js')
    | &#x9;&#x9;
    script(type='text/javascript').
      //加上enter事件，自動送出
      $(function() {
        $("#messageDiv input").keypress(function(event) {       
          if (event.keyCode == 13) getValue();
        });
      });

      //var socket = io();

      function loadData() {
        $.get("/filter/sample", function(data) {
          console.log(data);
          $.each(data, function(key, val) {
            console.log(val);
            $('#outputData').append($('<li class="history">').text(val.note));
          });
        });
      }
      function getValue() {
        if (!$('#nameData').val()) {
          alert("Please enter your name!");
        }
        else {
          if ($('#inputData').val()) {
            var message = document.getElementById('nameData').value + ": ";
            message += $('#inputData').val();
            var NowDate = new Date();
            var h = NowDate.getHours();
            var m = NowDate.getMinutes();
            var s = NowDate.getSeconds();　
            message += '\t(' + h + ':'+ m + ':' + s + ')' + '\n';
            //socket.emit('chat message', message);
            $('#inputData').val('');
            $.post("/filter/data", {Category: ["A", "B", "C", "D", "E", "F"], Dept: ["URPO", "LED", "URPO", "URPO", "LED", "F"], Region: ["Taiwan", "USA", "Taiwan", "Taiwan", "Taiwan", "Taiwan"], Institution: ["NTU", "NTU", "NTU", "NTU", "NTU", "NCTU"], Project_Agreement_Status: ["A", "B", "A", "D", "A", "F"], Project_Owners: ["Andy", "Ben", "Ben", "Ben", "Ben", "Folder"], Principal_Investigators: ["Peter", "Jerry", "Ken", "AD", "Eillfd", "Fred"]});
          }
        }
        return false;
      }
      //- socket.on('chat message', function(msg){
      //-   $('#outputData').append($('<li>').text(msg));
      //- });

      function setValue() {
        $('#inputData').val('Wonderful chatroom ^__^');
      }
  | &#x9;
  body(onload="loadData()")
    h1#myHeader.header(onclick='setValue()') ChatRoom
    | &#x9;&#x9;
    span
      label Your Name:
      | &#x9;&#x9;&#x9;
      input#nameData(type='text')
    | &#x9;&#x9;
    hr
    | &#x9;&#x9;&#x9;
    div#messageDiv()
      ul#outputData()
      | &#x9;&#x9;&#x9;&#x9;
      input#inputData(type='text')
